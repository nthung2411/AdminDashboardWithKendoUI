@{
    ViewBag.Title = "Charts";
}

@section header{
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Charts
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="@Url.Action("Dashboard", "Home")">Dashboard</a>
                </li>
                <li class="active">
                    <i class="fa fa-bar-chart-o"></i> Charts
                </li>
            </ol>
        </div>
    </div>
}

<div id="chart-financial-report" style="height: 500px;"></div>
<hr />
<div id="chart-orders-report" style="height: 500px;"></div>

<script>

    function generateOrdersChart() {
        var ds = {
            transport: {
                read: {
                    url: '@Url.Action("OrdersByYear", "Reports")',
                    dataType: "json"
                }
            },
            sort: {
                field: "Year",
                dir: "asc"
            }
        };

        $("#chart-orders-report").kendoChart({
            dataSource: ds,
            title: { text: "Orders Report" },
            legend: {
                position: "top"
            },
            seriesDefaults: {
                type: "column"
            },
            series: [
                { field: "TotalIncome", name: "Total Income" },
                { field: "ProductiveCost", name: "Productive Cost" }
            ],
            categoryAxis: {
                field: "Year",
                labels: { rotation: -90 },
                majorGridLines: { visible: false }
            },
            valueAxis: {
                labels: { format: "c" },
                majorUnit: 20000,
                line: { visible: false }
            },
            tooltip: {
                visible: true,
                format: "c"
            }
        });
    }

    function generateFinancialChart() {
        var ds = {
            transport: {
                read: {
                    url: '@Url.Action("OrdersByYear", "Reports")',
                    dataType: "json"
                }
            },
            sort: {
                field: "Year",
                dir: "asc"
            }
        };

        $("#chart-financial-report").kendoChart({
            dataSource: ds,
            title: { text: "Financial Report" },
            legend: {
                position: "top"
            },
            seriesDefaults: {
                type: "line"
            },
            series: [
                { field: "TotalIncome", name: "Total Income" },
                { field: "ProductiveCost", name: "Productive Cost" }
            ],
            categoryAxis: {
                field: "Year",
                //labels: { rotation: -90 },
                majorGridLines: { visible: false }
            },
            valueAxis: {
                labels: { format: "c" },
                majorUnit: 20000,
                line: { visible: false }
            },
            tooltip: {
                visible: true,
                format: "c"
            }
        });
    }

    $(document).ready(function () {
        $('#left-navigation-bar li:nth-child(2)').addClass('active');

        generateOrdersChart();
        generateFinancialChart();
    });
</script>
